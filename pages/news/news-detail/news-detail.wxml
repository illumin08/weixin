<view class="news-detail-container">
<image class="head-img" src="{{articleImg}}"> </image>
<view class="author-time">


<text class="time">{{authorDate}}</text>
<image bindtap="playerMusicTap" class="playermusic" src="{{isPlayer ?'../../image/mu1.png':'../../image/mu.png'}}"></image>
</view>
<text class="title">{{title}}</text>
<view class="tool">
<view class="circle-img">
<image wx:if="{{collected}}" catchtap="collectTap" src="../../image/fx1.png"></image>
<image wx:else catchtap="collectTap" src="../../image/fx.png"></image>

<image catchtap="onShowTap" class="share-img" src="../../image/_sc.png"></image>
</view>
<view class="horizon"></view>
</view>
<text class="detail">{{articleText}}</text>
</view>
