.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
 
.title{
  width: 20%;
  float: left;
  background: white;
  align-items: center;
  justify-content: space-around;
}

.title view{
  font-size: 15px;
  margin-top: 23px;
}
 
.title-sel {
 
  color: #24272c;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.title-sel  .line-style{
  background: #fff;
  height: 20px;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}
 
.title-sel-selected{
  color: #006bff;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title-sel-selected .line-style{
  background: #006bff;
  height: 6rpx;
  width: 90rpx;
  position: relative;
  margin-top: 10rpx;
}
 
.swiper {
  width: 80%;
  height: 700px;
  /* flex: 1; */
  overflow: scroll;
  margin: 0 auto;
  float: left;
}
 
.record-item {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
  font-size: 30rpx;
}
 
.name{
  display: flex;
  justify-content: space-between;
  border: 1px solid #eee;
  padding: 2vh;
  border-radius: 10rpx;
  font-size:14px;
}

image{
  width: 100%;
  height: 100px;
}

.jt{
  height: 90px;
  border: 1px solid gainsboro;
  
}
.jt image{
  width: 45%;
  height: 90px;
  float: left;
}

.kc{
  margin-left:10px;
  width:50%;
  height:70px;
  float: left;
}

.kc view{
  font-size: 14px;
}
